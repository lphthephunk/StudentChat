<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/HomeScreenActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cody_.studentchat.HomeScreen">

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="495dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:orientation="vertical">

                <Button android:id="@+id/JoinRoomBtn"
                    android:layout_height="wrap_content"
                    android:layout_width="88dp"
                    android:text="@string/joinRoomBtn"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="8dp"
                    android:layout_gravity="center_horizontal"/>

                <Button android:id="@+id/CreateRoomBtn"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="@string/createRoomBtn"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="8dp"
                    android:layout_gravity="center_horizontal"/>

                <Button android:id="@+id/MapBtn"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mapBtn"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="8dp"
                    android:layout_gravity="center_horizontal"/>

        </LinearLayout>

</android.support.constraint.ConstraintLayout>
